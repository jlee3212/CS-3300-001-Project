<!DOCTYPE html>
<html>
  <head>
    <title>CS3300001</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <nav id ="user_nav" class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
          <li class="nav-item">
          <%= button_to 'Home', projects_path, :method => "get"%>
          </li>
          <% if user_signed_in? %>
            </li class="nav-item">
              <%= button_to 'Edit profile', edit_user_registration_path, :method => "get" %>
            </li>
            </li class="nav-item">
            <%= button_to "Logout", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            </li class="nav-item">
              <%= button_to "Sign up", new_user_registration_path, :method => "get" %>
            </li>
            </li class="nav-item">
            <%= button_to "Login", new_user_session_path, :method => "get" %>
            </li>
          <% end %>
        </ul>
      </nav>
      <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
